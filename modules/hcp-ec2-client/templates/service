[Unit]
Description="${service_name}"
Requires=network-online.target
After=network-online.target

[Service]
Environment="PORT=80"
Type=simple
ExecStart=${service_cmd}
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
